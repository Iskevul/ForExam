@page "/table/{value}"

<h3>Table</h3>

<table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var name in names)
            {
                <tr>
                    <td>@name</td>
                </tr>
            }
        </tbody>
</table>

@code {
    [Parameter]
    public string value { get; set; }

    public static List<string> names { get; set; } = new List<string>();

    protected override void OnParametersSet() 
    {
        if (value != null)
            names.Add(value); 
    }
}
